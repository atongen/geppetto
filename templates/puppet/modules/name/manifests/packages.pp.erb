class <%= name %>::packages {

  package { 'build-essential':
    ensure => present
  }

  package { 'ntp':
    ensure => present
  }

  <% if ruby_type && ruby_version %>
  # Nokogiri dependencies
  package { ['libxml2', 'libxml2-dev', 'libxslt1-dev']:
    ensure => present
  }

  # ImageScience dependencies
  package { 'libfreeimage-dev':
    ensure => present
  }

  # rmagick & paperclip dependencies
  package { [ 'imagemagick', 'libmagickwand-dev' ]:
    ensure => present
  }

  # capabara-webkit
  package { ['libqtwebkit-dev', 'qt4-qmake']:
    ensure => present
  }
  <% end %>

  <% if (ruby_type && ruby_version) || nodejs %>
  package { 'nodejs':
    ensure => present
  }
  <% end %>

  <% if vim %>
  package { ['vim', 'vim-nox']:
    ensure => present
  }
  <% end %>

  <% if tmux %>
  package { 'tmux':
    ensure => present
  }
  <% end %>

  <% if wkhtmltopdf %>
  # pdf generation
  package { [ 'wkhtmltopdf', 'xorg', 'xvfb' ]:
    ensure => present
  }
  <% end %>

  <% if redis %>
  package { 'redis-server':
    ensure => present
  }
  <% end %>

  <% if memcached %>
  package { 'memcached':
    ensure => present
  }
  <% end %>

}
